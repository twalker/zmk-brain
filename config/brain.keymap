        };
    }; */

    keymap {
        compatible = "zmk,keymap";

                default_layer {
// -------------------------------------------------------------------------------------
// |      |  Q  |  W  |  F  |  P  |  B  |   |  J  |  L   |  U  |  Y  |  ;  |   BSPC    |
// |  ESC |  A  |  R  |  S  |  T  |  G  |   |  M  |  N   |  E  |  I  |  O  |    '      |
// |      |  Z  |  X  |  C  |  D  |  V  |   |  K  |  H   |  ,  |  .  |  /  |   RET     |
//                    | NUM | SYM | BSPC/NAV | SPC/NAV | WIN | MSE |
                        bindings = <
           &kp Q &kp W &kp F &kp P &kp B   &kp J &kp L  &kp U     &kp Y   &kp SEMI
   &kp ESC &hm LCTRL A &hm LALT R &hm LGUI S &hm LSHFT T &kp G   &kp M &hm RSHFT N  &hm RGUI E &hm LALT I &hm RCTRL O &kp SQT
   &none &kp Z &kp X &kp C &kp D &kp V   &kp K &kp H  &kp COMMA &kp DOT &kp FSLH &kp RET
                        &mo NUM  &mo SYM &lt NAV BSPC &lt NAV SPACE &mo WIN &none
                        >;
                };

                sym_layer {
// ----------------------------------------------------------------------------
// |    |  !  |  @  |  {  |  }  | "|" |   |  &  |  *  |  <  |  >  |  ;  |     |
// |    |  #  |  $  |  (  |  )  |  `  |   |  -  |  =  |  +  |  _  |  '  |     |
// |    |  %  |  ^  |  [  |  ]  |  ~  |   |  /  |  ?  |  ,  |  .  |  /  |     |
//                       |     |     |     |    |     |
                        bindings = <
          &kp EXCL  &kp AT   &kp LBRC &kp RBRC &kp PIPE       &kp AMPS &kp ASTRK &kp LT  &kp GT  &kp SEMI
   &trans &kp HASH  &kp DLLR &kp LPAR &kp RPAR &kp GRAVE      &kp MINUS &kp EQUAL &kp PLUS &kp UNDER &kp SQT &trans
   &trans &kp PRCNT &kp CARET &kp LBKT &kp RBKT &kp TILDE     &kp BSLH &kp QMARK &kp COMMA &kp DOT &kp FSLH &trans
                        &trans       &trans      &trans       &trans         &trans   &trans
                        >;
                };

                nav_layer {
// ----------------------------------------------------------------------------------
// |    |     |     |     |     |     |   |     |     | PGUP | UP |      | INS |     |
// |    | CTRL| ALT | GUI | SHFT|     |   |     | HOME| LEFT |DOWN|RIGHT | END |     |
// |    | UNDO| CUT |COPY | MENU| PSTE|   |     | <tab| PGDN |    |      | tab>|     |
//                       |     |     |     |    |     |
                        bindings = <
          &none     &none     &none     &none     &none         &none &kp PG_UP &kp UP &none &kp INS
   &trans &kp LCTRL &kp LALT  &kp LGUI  &kp LSHFT &none         &kp HOME &kp LEFT &kp DOWN &kp RIGHT &kp END &none
   &trans &kp LG(Z) &kp LG(X) &kp LG(C) &kp K_APP &kp LG(V)     &kp LS(LC(TAB)) &kp PG_DN &none &none &kp LC(TAB) &none
                        &trans       &trans      &kp DEL       &kp TAB        &trans     &trans
                        >;
                };

                num_layer {
// ----------------------------------------------------------------------------
// |    | F1  | F2  | F3  | F4  |     |   |     |  7  |  8  |  9  |     |     |
// |    | F5  | F6  | F7  | F8  |     |   |     |  4  |  5  |  6  |     |     |
// |    | F9  | F10 | F11 | F12 |     |   |     |  1  |  2  |  3  |     |     |
//                       |     |     |     | 0  |  .  |
                        bindings = <
          &kp F1    &kp F2    &kp F3    &kp F4    &none         &none     &kp N7    &kp N8    &kp N9    &none
   &trans &kp F5    &kp F6    &kp F7    &kp F8    &none         &none     &kp N4    &kp N5    &kp N6    &none     &none
   &trans &kp F9    &kp F10   &kp F11   &kp F12   &none         &none     &kp N1    &kp N2    &kp N3    &none     &none
                        &trans      &trans      &trans         &trans     &kp N0      &kp DOT
                        >;
                };


                win_layer {
// -----------------------------------------------------------------------------------------------------------------------------
// |       |          |          | VOL_UP     |          |BT_CLR   |   |         | ZOOM +| WIN U | WIN LG  |         |        |
// |       |          | PREV     | PLAY       | NEXT     |BT 0     |   |SCRNSHOT | WIN L | WIN D | WIN R   |  FULL   |        |
// |       |          |          | VOL_DN     | MUTE     |BT 1     |   |         | ZOOM -|       | WIN SM  |         |        |
//                                              |     |     |     |     |     |
                        bindings = <
         &none &none &kp C_VOL_UP &none &bt BT_CLR                           &none &kp LG(EQUAL) &kp LC(LA(UP)) &kp LC(LA(I)) &kp LC(LA(EQUAL))
   &none &none &kp C_PREV &kp C_PLAY &kp C_NEXT &bt BT_SEL 0                 &kp LS(LG(5)) &kp LC(LA(LEFT)) &kp LC(LA(DOWN)) &kp LC(LA(RIGHT)) &kp LC(LA(RET)) &none
   &none &none &none &kp C_VOL_DN &kp C_MUTE &bt BT_SEL 1                    &none &kp LG(MINUS) &none &kp LC(LA(K)) &kp LC(LA(MINUS)) &none
                        &trans     &trans      &trans       &trans        &trans      &trans
                        >;
                };

    };
};

